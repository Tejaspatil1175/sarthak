# ========================================
# AI-BOM Converter Backend Configuration
# ========================================

# Server Configuration
NODE_ENV=development
PORT=5000
API_PREFIX=/api

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/bom-converter
# For MongoDB Atlas (production):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/bom-converter?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# AI Engine Configuration
AI_ENGINE_URL=http://localhost:8000
AI_ENGINE_TIMEOUT=120000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=xlsx,xls,csv,json

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
# For production, use your frontend domain:
# CORS_ORIGIN=https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Email Configuration (Optional - for future features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# API Keys (if needed)
OPENAI_API_KEY=sk-your-openai-api-key-here
