# ============================================
# BACKEND ENVIRONMENT VARIABLES
# ============================================

# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/bom-converter
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/bom-converter?retryWrites=true&w=majority

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# AI Engine Configuration
AI_ENGINE_URL=http://localhost:8000
AI_ENGINE_TIMEOUT=120000

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.csv,.xlsx,.xls,.json
UPLOAD_DIR=./uploads

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# ============================================
# AI ENGINE ENVIRONMENT VARIABLES (Python)
# ============================================

# Flask Configuration
FLASK_PORT=8000
FLASK_HOST=0.0.0.0
FLASK_DEBUG=True

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Alternative LLM Providers (Choose one)
# Google AI (Gemini)
# GOOGLE_API_KEY=your-google-ai-api-key-here
# GOOGLE_MODEL=gemini-pro

# Anthropic (Claude)
# ANTHROPIC_API_KEY=your-anthropic-api-key-here
# ANTHROPIC_MODEL=claude-3-sonnet

# Hugging Face (Open Source Models)
# HUGGINGFACE_API_KEY=your-huggingface-api-key-here
# HUGGINGFACE_MODEL=mistralai/Mistral-7B-Instruct-v0.2

# TensorFlow Model Path
TF_MODEL_PATH=./models/bom_classifier.h5
TF_ENABLE_GPU=False

# Processing Configuration
MAX_BOM_ROWS=10000
BATCH_SIZE=100

# ============================================
# FRONTEND ENVIRONMENT VARIABLES
# ============================================

# API Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_API_TIMEOUT=120000

# App Configuration
REACT_APP_NAME=AI-BOM-Converter
REACT_APP_VERSION=1.0.0

# Feature Flags
REACT_APP_ENABLE_AUTH=true
REACT_APP_ENABLE_ANALYTICS=false

# ============================================
# DATABASE CONFIGURATION (Advanced)
# ============================================

# Database Pool Settings
DB_POOL_SIZE=10
DB_MAX_IDLE_TIME=10000

# ============================================
# LOGGING CONFIGURATION
# ============================================

# Log Level: error, warn, info, debug
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================

# SMTP Configuration for notifications
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-specific-password
# EMAIL_FROM=noreply@ai-bom-converter.com

# ============================================
# REDIS CONFIGURATION (Optional - for caching)
# ============================================

# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=
# REDIS_TTL=3600

# ============================================
# CLOUD STORAGE (Optional)
# ============================================

# AWS S3
# AWS_ACCESS_KEY_ID=your-access-key-id
# AWS_SECRET_ACCESS_KEY=your-secret-access-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=bom-converter-files

# Google Cloud Storage
# GCS_PROJECT_ID=your-project-id
# GCS_BUCKET=bom-converter-files
# GCS_KEYFILE_PATH=./gcs-keyfile.json

# ============================================
# MONITORING & ANALYTICS (Optional)
# ============================================

# Sentry Error Tracking
# SENTRY_DSN=https://your-sentry-dsn-here

# Google Analytics
# GA_TRACKING_ID=UA-XXXXXXXXX-X

# ============================================
# RATE LIMITING
# ============================================

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# SECURITY HEADERS
# ============================================

HELMET_ENABLED=true
CSRF_PROTECTION=true

# ============================================
# DEPLOYMENT SPECIFIC
# ============================================

# Production Settings
# NODE_ENV=production
# CORS_ORIGIN=https://your-production-domain.com
# MONGODB_URI=mongodb+srv://production-connection-string
# JWT_SECRET=super-strong-production-secret

# ============================================
# NOTES
# ============================================
# 1. Copy this file to .env and fill in your actual values
# 2. Never commit .env file to version control
# 3. Keep production secrets secure
# 4. Use different values for development and production
# 5. Rotate secrets regularly
